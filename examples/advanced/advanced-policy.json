{
  "policy": {
    "name": "Advanced Compliance Policy",
    "version": "2.0.0",
    "description": "Multi-rule compliance policy",
    "rules": [
      {
        "id": "config-check",
        "type": "file_check",
        "path": "config.json",
        "requirements": ["exists", "valid_json"]
      },
      {
        "id": "size-limit",
        "type": "size_check",
        "max_size": 1048576,
        "paths": ["*.log"]
      }
    ]
  }
}
