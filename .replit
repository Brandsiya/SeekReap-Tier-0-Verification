language = "nodejs"
run = "npm start"  # Changed from npm start
modules = ["python-3.11"]


[nix]
channel = "stable-24_11"
packages = ["nodejs_22"]

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "tsconfig.json"]

[env]
NODE_ENV = "development"

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 9999
externalPort = 3000
